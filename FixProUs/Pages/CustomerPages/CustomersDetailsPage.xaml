                                                       Padding="5" 
                                                       HorizontalOptions="End" 
                                                       Margin="{OnPlatform Android= 30, iOS='30,30,30,50'}"
                                                       VerticalOptions ="End"
                                                       HeightRequest="50"
                                                       WidthRequest="50">
                                        <Label TranslationY="{OnPlatform Android=-8,iOS=-2}"
                                                VerticalOptions="Center"
                                                HorizontalTextAlignment="Center"
                                                VerticalTextAlignment="Center"
                                                Text="+"
                                                TextColor="White"
                                                FontSize="40"></Label>
                                        <Border.StrokeShape>
                                            <RoundRectangle CornerRadius="{OnPlatform Android=100,iOS=25}"></RoundRectangle>
                                        </Border.StrokeShape>
                                        <Border.Shadow>
                                            <Shadow Brush="{OnPlatform Android=Gray, iOS=Gray}" Radius="{OnPlatform Android=15,iOS=15}"></Shadow>
                                        </Border.Shadow>
                                        <Border.GestureRecognizers>
                                            <TapGestureRecognizer Command="{Binding SelectCustToCreateEstimatePageCommand}" ></TapGestureRecognizer>
                                        </Border.GestureRecognizers>
                                    </Border>

                                </Grid>
                            </ContentView>

                        </tabView:SfTabItem.Content>

                    </tabView:SfTabItem>

                    --><!--Invoices Tab--><!--
                    <tabView:SfTabItem Header="Invoices"
                                       TextColor="#b66dff" 
                                       ImageSource="invoices.png"
                                       ImagePosition="Top" HorizontalOptions="CenterAndExpand"
                                       ImageTextSpacing="5">

                        <tabView:SfTabItem.Content>
                            <ContentView x:Name="TabInvoices">
                                <Grid VerticalOptions="FillAndExpand">

                                    <StackLayout Margin="0,20,0,0">

                                        <ListView x:Name="lstInvoices" SelectionMode="None" 
                                                  ItemsSource="{Binding LstInvoices}"
                                                  HasUnevenRows="True" 
                                                  VerticalScrollBarVisibility="Never">
                                            <ListView.ItemTemplate>
                                                <DataTemplate>
                                                    <ViewCell>
                                                        <StackLayout Padding="20,10,20,10" Spacing="10">
                                                            <StackLayout Orientation="Horizontal">
                                                                <Border BackgroundColor="#eedeff" HorizontalOptions="FillAndExpand">
                                                                    <Label Text="{Binding ScheduleName}"
                                                                           FontAttributes="Bold"
                                                                           TextColor="Black" 
                                                                           HorizontalTextAlignment="Start"
                                                                           VerticalTextAlignment="Center"
                                                                           Padding="20,7,20,7">
                                                                        <Label.Triggers>
                                                                            <DataTrigger TargetType="Label" Binding="{Binding WhithoutSch}" Value="False">
                                                                                <Setter Property="Text" Value="{Binding Id}"></Setter>
                                                                            </DataTrigger>
                                                                        </Label.Triggers>
                                                                    </Label>
                                                                    <Border.StrokeShape>
                                                                        <RoundRectangle CornerRadius="10" Stroke="#b66dff" StrokeThickness="2"></RoundRectangle>
                                                                    </Border.StrokeShape>
                                                                    <Border.Shadow>
                                                                        <Shadow Brush="{OnPlatform Android=Gray, iOS=Gray}" Radius="{OnPlatform Android=15,iOS=15}"></Shadow>
                                                                    </Border.Shadow>
                                                                </Border>

                                                                <Label Text="{Binding CreateDate,StringFormat='{0:MM-dd-yyyy}'}" 
                                                                       FontSize="12" 
                                                                       Margin="50,0,0,0"
                                                                       FontAttributes="Bold"
                                                                       HorizontalOptions="End"
                                                                       HorizontalTextAlignment="Center"
                                                                       VerticalTextAlignment="Center"></Label>
                                                            </StackLayout>

                                                            <StackLayout.GestureRecognizers>
                                                                <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type vm:CustomersViewModel}}, Path=SelecteInvoiceDetailsCommand}" CommandParameter="{Binding}"></TapGestureRecognizer>
                                                            </StackLayout.GestureRecognizers>

                                                        </StackLayout>
                                                    </ViewCell>
                                                </DataTemplate>
                                            </ListView.ItemTemplate>
                                            <ListView.Triggers>
                                                <DataTrigger TargetType="ListView" Binding="{Binding LstInvoices.Count}" Value="0">
                                                    <Setter Property="IsVisible" Value="False"></Setter>
                                                </DataTrigger>
                                            </ListView.Triggers>
                                        </ListView>

                                        <StackLayout.Triggers>
                                            <DataTrigger TargetType="StackLayout" Binding="{Binding Source={x:Reference stkNoData4}, Path=IsVisible}" Value="True">
                                                <Setter Property="HeightRequest" Value="0"></Setter>
                                                <Setter Property="IsVisible" Value="False"></Setter>
                                            </DataTrigger>
                                        </StackLayout.Triggers>
                                    </StackLayout>

                                    --><!--No Data--><!--
                                    <StackLayout x:Name="stkNoData4" Padding="0,200,0,300" IsVisible="False" HeightRequest="100" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
                                        <Image Source="noresult.png" Aspect="AspectFill" VerticalOptions="FillAndExpand"></Image>
                                        <StackLayout.Triggers>
                                            <MultiTrigger TargetType="StackLayout">
                                                <MultiTrigger.Conditions>
                                                    <BindingCondition Binding="{Binding LstInvoices.Count}" Value="0" />
                                                </MultiTrigger.Conditions>
                                                <Setter Property="IsVisible" Value="True"></Setter>
                                            </MultiTrigger>
                                        </StackLayout.Triggers>
                                    </StackLayout>

                                    <Border 
                                                       BackgroundColor="#8f1fff" 
                                                       Padding="5" 
                                                       HorizontalOptions="End" 
                                                       Margin="{OnPlatform Android= 30, iOS='30,30,30,50'}"
                                                       VerticalOptions="End"
                                                       HeightRequest="40"
                                                       WidthRequest="40">
                                        <Label TranslationY="{OnPlatform Android=-8,iOS=-2}"
                                                VerticalOptions="Center"
                                                HorizontalTextAlignment="Center"
                                                VerticalTextAlignment="Center"
                                                Text="+"
                                                TextColor="White"
                                                FontSize="40"></Label>

                                        <Border.StrokeShape>
                                            <RoundRectangle CornerRadius="{OnPlatform Android=100,iOS=25}"></RoundRectangle>
                                        </Border.StrokeShape>
                                        <Border.Shadow>
                                            <Shadow Brush="{OnPlatform Android=Gray, iOS=Gray}" Radius="{OnPlatform Android=15,iOS=15}"></Shadow>
                                        </Border.Shadow>

                                        <Border.GestureRecognizers>
                                            <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type vm:CustomersViewModel}}, Path=SelectCustToCreateInvoicePageCommand}" ></TapGestureRecognizer>
                                        </Border.GestureRecognizers>
                                    </Border>

                                </Grid>
                            </ContentView>
                        </tabView:SfTabItem.Content>
                    </tabView:SfTabItem>

                </tabView:SfTabView.Items>

            </tabView:SfTabView>

            --><!--<ActivityIndicator x:Name="actIndLoading" IsRunning="{Binding IsBusy}" IsVisible="False" PropertyChanged="actIndLoading_PropertyChanged">

            </ActivityIndicator>--><!--
        </StackLayout>
    </Controls:CustomsPage.Content>-->
</Controls:CustomsPage>