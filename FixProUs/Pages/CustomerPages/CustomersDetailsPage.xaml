<?xml version="1.0" encoding="utf-8" ?>
<Controls:CustomsPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            x:Class="FixProUs.Pages.CustomerPages.CustomersDetailsPage"
            xmlns:Controls="clr-namespace:FixProUs.Controls"
            xmlns:Helpers="clr-namespace:FixProUs.Helpers"
            xmlns:vm="clr-namespace:FixProUs.ViewModels"
                      BackgroundColor="White"
            xmlns:tabView="clr-namespace:Syncfusion.Maui.TabView;assembly=Syncfusion.Maui.TabView"
            xmlns:syncfusion="clr-namespace:Syncfusion.Maui.ListView;assembly=Syncfusion.Maui.ListView">

    <Controls:CustomsPage.BindingContext>
        <vm:CustomersViewModel></vm:CustomersViewModel>
    </Controls:CustomsPage.BindingContext>


    <!--<local:InfoCustomerPage IconImageSource="informations.png" Title="Information"/>
    <local:SchedulesCustomerPage IconImageSource="schedules.png" Title="Schedules"/>
    <local:EstimatesCustomerPage IconImageSource="estimates.png" Title="Estimates"/>
    <local:InvoicesCustomerPage IconImageSource="invoices.png" Title="Invoices"/>-->

    <StackLayout VerticalOptions="FillAndExpand">
        

    <StackLayout Orientation="Horizontal" Margin="20,10">
        <Image VerticalOptions="CenterAndExpand">
            <Image.Source>
                <FontImageSource Glyph="" FontFamily="FontIconSolid" Color="Gray" Size="25"></FontImageSource>
            </Image.Source>
            <Image.GestureRecognizers>
                <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped"></TapGestureRecognizer>
            </Image.GestureRecognizers>
        </Image>
        <Label FontAutoScalingEnabled="False" FontSize="16" HorizontalOptions="CenterAndExpand" FontAttributes="Bold" 
                TextColor="Gray" VerticalOptions="CenterAndExpand">
                <Label.Text>
                    <MultiBinding StringFormat="{}{0} {1}">
                        <Binding Path="CustomerDetails.FirstName" />
                        <Binding Path="CustomerDetails.LastName" />
                    </MultiBinding>
                </Label.Text>
            </Label>
    </StackLayout>

        <tabView:SfTabView IndicatorBackground="#9b5ff5" VerticalOptions="FillAndExpand" FlowDirection="LeftToRight" TabBarHeight="65">
        <tabView:SfTabView.Items>
            <!--Informations-->
            <tabView:SfTabItem Header="Informations" TextColor="Black" FontSize="14" 
                           FontFamily="Almarai-Regular" BackgroundColor="#f7f5fa">
                <tabView:SfTabItem.ImageSource>
                        <FontImageSource Glyph="" FontFamily="FontIconSolid" Color="Gray"></FontImageSource>
                </tabView:SfTabItem.ImageSource>
                <tabView:SfTabItem.Content>
                    <ScrollView Padding="0,10,0,30" VerticalOptions="FillAndExpand">
                        <StackLayout>
                            <StackLayout Orientation="Horizontal" Margin="0,10,20,20">
                                <Border BackgroundColor="White" HorizontalOptions="EndAndExpand" Padding="25,15,25,15">
                                    <StackLayout>
                                        <Image Source="avatar.png"
                                                 Aspect="Fill" 
                                                 HeightRequest="100" 
                                                 WidthRequest="100"></Image>
                                        <StackLayout HorizontalOptions="Center" Spacing="2">

                                            <Label 
                                                 FontAttributes="Bold" 
                                                 FontSize="14"
                                                 HorizontalTextAlignment="Center"
                                                 TextColor="#8f1fff">
                                                <Label.Text>
                                                    <MultiBinding StringFormat="{}{0} {1}">
                                                        <Binding Path="CustomerDetails.FirstName" />
                                                        <Binding Path="CustomerDetails.LastName" />
                                                    </MultiBinding>
                                                </Label.Text>
                                            </Label>

                                            <Label Text="{Binding CustomerDetails.CustomerCategory.CategoryName}"
                                                 FontSize="13"
                                                 HorizontalTextAlignment="Center"
                                                 TextColor="Black"></Label>

                                            <Label Text="{Binding CustomerDetails.Email}"
                                                     FontSize="10"
                                                     HorizontalTextAlignment="Center"
                                                     TextColor="Black"></Label>

                                            <Label Text="{Binding Discount,StringFormat='Discount: %{0}'}"
                                                     FontSize="10"
                                                     HorizontalTextAlignment="Center"
                                                     TextColor="Black">
                                                <Label.Triggers>
                                                    <DataTrigger TargetType="Label" Binding="{Binding Discount}" Value="0">
                                                        <Setter Property="IsVisible" Value="False"></Setter>
                                                    </DataTrigger>
                                                </Label.Triggers>
                                            </Label>

                                        </StackLayout>
                                    </StackLayout>

                                    <Border.Shadow>
                                        <Shadow Brush="{OnPlatform Android=LightGray, iOS=LightGray}" Radius="{OnPlatform Android=5,iOS=3}"></Shadow>
                                    </Border.Shadow>
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="10" Stroke="LightGray" StrokeThickness="1"></RoundRectangle>
                                    </Border.StrokeShape>
                                    <Border.Triggers>
                                        <DataTrigger TargetType="Border" Binding="{Binding Source={x:Reference btnEdit}, Path=IsVisible}" Value="False">
                                            <Setter Property="HorizontalOptions" Value="CenterAndExpand"></Setter>
                                        </DataTrigger>
                                    </Border.Triggers>
                                </Border>

                                <Button Text="Edit" IsVisible="False" x:Name="btnEdit"
                                          HorizontalOptions="End"
                                          Padding="0,2,0,2"
                                          Margin="0,0,10,0" 
                                          FontSize="13"
                                          BackgroundColor="White"
                                          BorderColor="#b66dff"
                                          TextColor="#333"
                                          BorderWidth="1" 
                                          CornerRadius="5"
                                          VerticalOptions="End" 
                                          WidthRequest="70"
                                          HeightRequest="35"
                                          Command="{Binding Source={RelativeSource AncestorType={x:Type vm:CustomersViewModel}}, Path=UpdateCustomerCommand}"
                                          CommandParameter="{Binding CustomerDetails}">
                                    <Button.Triggers>
                                        <DataTrigger TargetType="Button" Binding="{Binding EmployeePermission.ActiveEditCustomer}" Value="True">
                                            <Setter Property="IsVisible" Value="True"></Setter>
                                        </DataTrigger>
                                    </Button.Triggers>
                                </Button>
                            </StackLayout>

                            <StackLayout>
                                <Label Text="Contact" TextColor="#b66dff" FontAttributes="Bold" HorizontalOptions="StartAndExpand" Padding="20,0,20,5"></Label>

                                <Border BackgroundColor="White" HorizontalOptions="FillAndExpand" Margin="20,0,20,20" Padding="20,10,20,10">
                                    <Grid RowSpacing="10" Padding="5,10,5,10" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="1*"></RowDefinition>
                                            <RowDefinition Height="1*"></RowDefinition>
                                            <RowDefinition Height="1*"></RowDefinition>
                                            <RowDefinition Height="1*"></RowDefinition>
                                            <RowDefinition Height="1*"></RowDefinition>
                                            <RowDefinition Height="1*"></RowDefinition>
                                        </Grid.RowDefinitions>

                                        <StackLayout HorizontalOptions="FillAndExpand">
                                            <Label Text="Phone" TextColor="Black" FontSize="13" HorizontalOptions="StartAndExpand"></Label>
                                            <Border BackgroundColor="White" Padding="5,0,5,0" HorizontalOptions="FillAndExpand">
                                                <StackLayout HorizontalOptions="FillAndExpand" Margin="5,12,5,12">
                                                    <Label 
                                         Text="{Binding CustomerDetails.Phone1}" 
                                         TextColor="#8f1fff"
                                         FontSize="12"
                                         HorizontalOptions="Start"
                                         VerticalTextAlignment="Center">
                                                    </Label>

                                                </StackLayout>

                                                <Border.Shadow>
                                                    <Shadow Brush="{OnPlatform Android=LightGray, iOS=LightGray}" Radius="{OnPlatform Android=5,iOS=3}"></Shadow>
                                                </Border.Shadow>
                                                <Border.StrokeShape>
                                                    <RoundRectangle CornerRadius="10" Stroke="LightGray" StrokeThickness="1"></RoundRectangle>
                                                </Border.StrokeShape>
                                            </Border>
                                        </StackLayout>

                                        <StackLayout Grid.Row="1" HorizontalOptions="FillAndExpand">
                                            <Label Text="Email" TextColor="Black" FontSize="12" HorizontalOptions="StartAndExpand"></Label>
                                            <Border BackgroundColor="White" Padding="5,0,5,0" HorizontalOptions="FillAndExpand">
                                                <StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand" >
                                                    <Label 
                                         Text="{Binding CustomerDetails.Email}" 
                                         Margin="5,12,5,12"
                                         TextColor="#8f1fff"
                                         FontSize="12"
                                         HorizontalOptions="FillAndExpand"
                                         VerticalTextAlignment="Center"></Label>
                                                </StackLayout>

                                                <Border.Shadow>
                                                    <Shadow Brush="{OnPlatform Android=LightGray, iOS=LightGray}" Radius="{OnPlatform Android=5,iOS=3}"></Shadow>
                                                </Border.Shadow>
                                                <Border.StrokeShape>
                                                    <RoundRectangle CornerRadius="10" Stroke="LightGray" StrokeThickness="1"></RoundRectangle>
                                                </Border.StrokeShape>
                                            </Border>
                                        </StackLayout>

                                        <StackLayout Grid.Row="2" HorizontalOptions="FillAndExpand">
                                            <Label Text="Address" TextColor="Black" FontSize="13" HorizontalOptions="StartAndExpand"></Label>
                                            <Border BackgroundColor="White" Padding="5,0,5,0" HorizontalOptions="FillAndExpand">
                                                <StackLayout HorizontalOptions="FillAndExpand" >

                                                    <Label 
                                         Margin="5,12,5,12"
                                         Text="{Binding CustomerDetails.Address}" 
                                         TextColor="#8f1fff"
                                         FontSize="12"
                                         HorizontalOptions="FillAndExpand"
                                         VerticalTextAlignment="Center"></Label>
                                                </StackLayout>

                                                <Border.Shadow>
                                                    <Shadow Brush="{OnPlatform Android=LightGray, iOS=LightGray}" Radius="{OnPlatform Android=5,iOS=3}"></Shadow>
                                                </Border.Shadow>
                                                <Border.StrokeShape>
                                                    <RoundRectangle CornerRadius="10" Stroke="LightGray" StrokeThickness="1"></RoundRectangle>
                                                </Border.StrokeShape>
                                            </Border>
                                        </StackLayout>


                                        <StackLayout Grid.Row="3" HorizontalOptions="FillAndExpand">
                                            <Label Text="City/State" TextColor="Black" FontSize="13" HorizontalOptions="StartAndExpand"></Label>
                                            <Border BackgroundColor="White" Padding="5,0,5,0" HorizontalOptions="FillAndExpand">
                                                <StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand" >
                                                    <Label 
                                         TextColor="#8f1fff"
                                         Margin="5,12,5,12"
                                         HorizontalOptions="FillAndExpand"
                                         FontSize="12"
                                         VerticalTextAlignment="Center">
                                                        <Label.Text>
                                                            <MultiBinding StringFormat="{}{0} / {1}">
                                                                <Binding Path="CustomerDetails.City" />
                                                                <Binding Path="CustomerDetails.State" />
                                                            </MultiBinding>
                                                        </Label.Text>
                                                    </Label>
                                                </StackLayout>

                                                <Border.Shadow>
                                                    <Shadow Brush="{OnPlatform Android=LightGray, iOS=LightGray}" Radius="{OnPlatform Android=5,iOS=3}"></Shadow>
                                                </Border.Shadow>
                                                <Border.StrokeShape>
                                                    <RoundRectangle CornerRadius="10" Stroke="LightGray" StrokeThickness="1"></RoundRectangle>
                                                </Border.StrokeShape>
                                            </Border>
                                        </StackLayout>


                                        <StackLayout Orientation="Horizontal" Grid.Row="4" Grid.Column="0" Spacing="5" Margin="5,12,5,12" HorizontalOptions="FillAndExpand">
                                            <StackLayout HorizontalOptions="FillAndExpand">
                                                <Label Text="Year Built" TextColor="Black" FontSize="13" HorizontalOptions="StartAndExpand"></Label>
                                                <Border BackgroundColor="White" Padding="10" HorizontalOptions="FillAndExpand">
                                                    <Label 
                                           TextColor="#8f1fff" Text="{Binding CustomerDetails.YearBuit}"      
                                           HorizontalOptions="FillAndExpand"
                                           FontSize="12"
                                           VerticalTextAlignment="Center">
                                                        <Label.Triggers>
                                                            <DataTrigger TargetType="Label" Binding="{Binding CustomerDetails.YearBuit}" Value="0">
                                                                <Setter Property="Text" Value=""></Setter>
                                                            </DataTrigger>
                                                        </Label.Triggers>
                                                    </Label>

                                                    <Border.Shadow>
                                                        <Shadow Brush="{OnPlatform Android=LightGray, iOS=LightGray}" Radius="{OnPlatform Android=5,iOS=3}"></Shadow>
                                                    </Border.Shadow>
                                                    <Border.StrokeShape>
                                                        <RoundRectangle CornerRadius="10" Stroke="LightGray" StrokeThickness="1"></RoundRectangle>
                                                    </Border.StrokeShape>
                                                </Border>
                                            </StackLayout>

                                            <StackLayout HorizontalOptions="FillAndExpand">
                                                <Label Text="Estimate Value" TextColor="Black" FontSize="13" HorizontalOptions="StartAndExpand"></Label>
                                                <Border BackgroundColor="White" Padding="10" HorizontalOptions="FillAndExpand">
                                                    <Label 
                                           Text="{Binding CustomerDetails.EstimedValueView}"            
                                           TextColor="#8f1fff"
                                           FontSize="12"
                                           HorizontalOptions="FillAndExpand"
                                           VerticalTextAlignment="Center">
                                                        <Label.Triggers>
                                                            <DataTrigger TargetType="Label" Binding="{Binding CustomerDetails.EstimedValue}" Value="0">
                                                                <Setter Property="Text" Value=""></Setter>
                                                            </DataTrigger>
                                                        </Label.Triggers>
                                                    </Label>
                                                    <Border.Shadow>
                                                        <Shadow Brush="{OnPlatform Android=LightGray, iOS=LightGray}" Radius="{OnPlatform Android=5,iOS=3}"></Shadow>
                                                    </Border.Shadow>
                                                    <Border.StrokeShape>
                                                        <RoundRectangle CornerRadius="10" Stroke="LightGray" StrokeThickness="1"></RoundRectangle>
                                                    </Border.StrokeShape>
                                                </Border>
                                            </StackLayout>

                                            <StackLayout HorizontalOptions="FillAndExpand">
                                                <Label Text="Square Footage" TextColor="Black" FontSize="13" HorizontalOptions="StartAndExpand"></Label>
                                                <Border BackgroundColor="White" Padding="10" HorizontalOptions="FillAndExpand">
                                                    <Label 
                                             Text="{Binding CustomerDetails.Squirefootage}"               
                                             TextColor="#8f1fff"
                                             FontSize="12"
                                             HorizontalOptions="FillAndExpand"
                                             VerticalTextAlignment="Center">
                                                        <Label.Triggers>
                                                            <DataTrigger TargetType="Label" Binding="{Binding CustomerDetails.Squirefootage}" Value="0">
                                                                <Setter Property="Text" Value=""></Setter>
                                                            </DataTrigger>
                                                        </Label.Triggers>
                                                    </Label>
                                                    <Border.Shadow>
                                                        <Shadow Brush="{OnPlatform Android=LightGray, iOS=LightGray}" Radius="{OnPlatform Android=5,iOS=3}"></Shadow>
                                                    </Border.Shadow>
                                                    <Border.StrokeShape>
                                                        <RoundRectangle CornerRadius="10" Stroke="LightGray" StrokeThickness="1"></RoundRectangle>
                                                    </Border.StrokeShape>
                                                </Border>
                                            </StackLayout>
                                        </StackLayout>


                                        <StackLayout Grid.Row="5" Margin="5,12,5,12" HorizontalOptions="FillAndExpand">
                                            <Label Text="Notes" TextColor="Black" FontSize="12" HorizontalOptions="StartAndExpand"></Label>
                                            <Border BackgroundColor="White" Padding="5,0,5,0" HorizontalOptions="FillAndExpand">
                                                <StackLayout HorizontalOptions="FillAndExpand" >
                                                    <Label 
                                         Text="{Binding CustomerDetails.Notes}" 
                                         TextColor="#8f1fff"
                                         Margin="5,12,5,12"
                                         HorizontalOptions="FillAndExpand"
                                         FontSize="12"
                                         VerticalTextAlignment="Center"></Label>
                                                </StackLayout>

                                                <Border.Shadow>
                                                    <Shadow Brush="{OnPlatform Android=LightGray, iOS=LightGray}" Radius="{OnPlatform Android=5,iOS=3}"></Shadow>
                                                </Border.Shadow>
                                                <Border.StrokeShape>
                                                    <RoundRectangle CornerRadius="10" Stroke="LightGray" StrokeThickness="1"></RoundRectangle>
                                                </Border.StrokeShape>
                                            </Border>
                                        </StackLayout>

                                    </Grid>

                                    <Border.Shadow>
                                        <Shadow Brush="{OnPlatform Android=LightGray, iOS=LightGray}" Radius="{OnPlatform Android=5,iOS=3}"></Shadow>
                                    </Border.Shadow>
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="10" Stroke="LightGray" StrokeThickness="1"></RoundRectangle>
                                    </Border.StrokeShape>
                                </Border>

                            </StackLayout>

                            <StackLayout>
                                <Label Text="Details" TextColor="#b66dff" FontAttributes="Bold" HorizontalOptions="StartAndExpand" Padding="20,0,20,5"></Label>

                                <Border BackgroundColor="White" HorizontalOptions="FillAndExpand" Margin="20,0,20,20" Padding="20,10,20,10">
                                    <Grid RowSpacing="10" Padding="5,10,5,10" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="1*"></RowDefinition>
                                            <RowDefinition Height="1*"></RowDefinition>
                                            <RowDefinition Height="1*"></RowDefinition>
                                            <RowDefinition Height="1*"></RowDefinition>
                                        </Grid.RowDefinitions>

                                        <StackLayout Grid.Column="0" HorizontalOptions="FillAndExpand">
                                            <Label Text="Category" TextColor="Black" FontSize="13" HorizontalOptions="StartAndExpand"></Label>
                                            <Border BackgroundColor="White" Padding="5,0,5,0" HorizontalOptions="FillAndExpand">
                                                <StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand" >
                                                    <Label 
                                         Text="{Binding CustomerDetails.CustomerCategory.CategoryName}" 
                                         TextColor="#8f1fff"
                                         FontSize="12"
                                         Margin="5,12,5,12"
                                         HorizontalOptions="FillAndExpand"
                                         VerticalTextAlignment="Center"></Label>
                                                </StackLayout>

                                                <Border.Shadow>
                                                    <Shadow Brush="{OnPlatform Android=LightGray, iOS=LightGray}" Radius="{OnPlatform Android=5,iOS=3}"></Shadow>
                                                </Border.Shadow>
                                                <Border.StrokeShape>
                                                    <RoundRectangle CornerRadius="10" Stroke="LightGray" StrokeThickness="1"></RoundRectangle>
                                                </Border.StrokeShape>
                                            </Border>
                                        </StackLayout>

                                        <StackLayout Grid.Row="1" HorizontalOptions="FillAndExpand">
                                            <Label Text="Member" TextColor="Black" FontSize="13" HorizontalOptions="StartAndExpand"></Label>
                                            <Border BackgroundColor="White" Padding="5,0,5,0" HorizontalOptions="FillAndExpand">
                                                <StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand" Margin="5,12,5,12">
                                                    <Label x:Name="lblYesOrNo"
                                             TextColor="#8f1fff"
                                             FontSize="12"
                                             HorizontalOptions="Start"
                                             VerticalTextAlignment="Center">
                                                        <Label.Triggers>
                                                            <DataTrigger TargetType="Label" Binding="{Binding CustomerDetails.MemeberType}" Value="True">
                                                                <Setter Property="Text" Value="Yes"></Setter>
                                                            </DataTrigger>
                                                            <DataTrigger TargetType="Label" Binding="{Binding CustomerDetails.MemeberType}" Value="False">
                                                                <Setter Property="Text" Value="No"></Setter>
                                                            </DataTrigger>
                                                        </Label.Triggers>
                                                    </Label>

                                                    <Label 
                                         TextColor="#333"
                                         FontSize="12"
                                         HorizontalOptions="CenterAndExpand"
                                         VerticalTextAlignment="Center">
                                                        <Label.Text>
                                                            <MultiBinding StringFormat="{}{0} {1}">
                                                                <Binding Path="CustomerDetails.MemberDTO.Name" />
                                                                <Binding Path="CustomerDetails.MemberDTO.MemberValue" />
                                                            </MultiBinding>
                                                        </Label.Text>
                                                    </Label>


                                                </StackLayout>

                                                <Border.Shadow>
                                                    <Shadow Brush="{OnPlatform Android=LightGray, iOS=LightGray}" Radius="{OnPlatform Android=5,iOS=3}"></Shadow>
                                                </Border.Shadow>
                                                <Border.StrokeShape>
                                                    <RoundRectangle CornerRadius="10" Stroke="LightGray" StrokeThickness="1"></RoundRectangle>
                                                </Border.StrokeShape>
                                            </Border>
                                        </StackLayout>


                                        <StackLayout Grid.Row="2" HorizontalOptions="FillAndExpand">
                                            <Label Text="Texable" TextColor="Black" FontSize="13" HorizontalOptions="StartAndExpand"></Label>
                                            <Border BackgroundColor="White" Padding="5,0,5,0" HorizontalOptions="FillAndExpand">

                                                <StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand" Margin="5,12,5,12">
                                                    <Label
                                             TextColor="#8f1fff"
                                             FontSize="12"
                                             HorizontalOptions="Start"
                                             VerticalTextAlignment="Center">
                                                        <Label.Triggers>
                                                            <DataTrigger TargetType="Label" Binding="{Binding CustomerDetails.Taxable}" Value="True">
                                                                <Setter Property="Text" Value="Yes"></Setter>
                                                            </DataTrigger>
                                                            <DataTrigger TargetType="Label" Binding="{Binding CustomerDetails.Taxable}" Value="False">
                                                                <Setter Property="Text" Value="No"></Setter>
                                                            </DataTrigger>
                                                        </Label.Triggers>
                                                    </Label>

                                                    <Label Text="{Binding CustomerDetails.TaxDTO.Taxname}"
                                         TextColor="#333"
                                         FontSize="12"
                                         HorizontalOptions="CenterAndExpand"
                                         VerticalTextAlignment="Center">
                                                    </Label>


                                                </StackLayout>
                                                <Border.Shadow>
                                                    <Shadow Brush="{OnPlatform Android=LightGray, iOS=LightGray}" Radius="{OnPlatform Android=5,iOS=3}"></Shadow>
                                                </Border.Shadow>
                                                <Border.StrokeShape>
                                                    <RoundRectangle CornerRadius="10" Stroke="LightGray" StrokeThickness="1"></RoundRectangle>
                                                </Border.StrokeShape>
                                            </Border>
                                        </StackLayout>

                                        <StackLayout Grid.Row="3" Grid.Column="0" HorizontalOptions="FillAndExpand">
                                            <Label Text="Source" TextColor="Black" FontSize="13" HorizontalOptions="StartAndExpand"></Label>
                                            <Border BackgroundColor="White" Padding="5,0,5,0" HorizontalOptions="FillAndExpand">
                                                <StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand" >
                                                    <Label Text="{Binding CustomerDetails.CampaignDTO.Lable}"
                                             TextColor="#8f1fff"
                                             FontSize="12"
                                             Margin="5,12,5,12"
                                             HorizontalOptions="FillAndExpand"
                                             VerticalTextAlignment="Center">
                                                    </Label>
                                                </StackLayout>

                                                <Border.Shadow>
                                                    <Shadow Brush="{OnPlatform Android=LightGray, iOS=LightGray}" Radius="{OnPlatform Android=5,iOS=3}"></Shadow>
                                                </Border.Shadow>
                                                <Border.StrokeShape>
                                                    <RoundRectangle CornerRadius="10" Stroke="LightGray" StrokeThickness="1"></RoundRectangle>
                                                </Border.StrokeShape>
                                            </Border>
                                        </StackLayout>
                                    </Grid>

                                    <Border.Shadow>
                                        <Shadow Brush="{OnPlatform Android=LightGray, iOS=LightGray}" Radius="{OnPlatform Android=5,iOS=3}"></Shadow>
                                    </Border.Shadow>
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="10" Stroke="LightGray" StrokeThickness="1"></RoundRectangle>
                                    </Border.StrokeShape>
                                </Border>

                            </StackLayout>

                            <StackLayout>
                                <Label Text="Custom Fields" TextColor="#b66dff" FontAttributes="Bold" HorizontalOptions="StartAndExpand" Padding="20,0,20,5"></Label>

                                <!--<yummy:PancakeView BackgroundColor="White" CornerRadius="10" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" Margin="20,0,20,20" Padding="20,20,20,0">-->

                                <StackLayout Orientation="Horizontal" Spacing="10" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" Margin="20,0,20,0">

                                    <syncfusion:SfListView x:Name="lstCustomFields" 
                                           SelectionMode="None" BackgroundColor="White"
                                           AllowGroupExpandCollapse="True"
                                           ItemSize="65"
                                           Padding="0"
                                           Margin="0"
                                           HorizontalOptions="CenterAndExpand"
                                           ScrollBarVisibility="Default"
                                           ItemsSource="{Binding CustomerDetails.LstCustomersCustomField}"    
                                           AutoFitMode="None">
                                        <syncfusion:SfListView.ItemTemplate>
                                            <DataTemplate>
                                                <ViewCell>
                                                    <StackLayout>

                                                        <Border BackgroundColor="White" Margin="0,0,0,10" Padding="5" HorizontalOptions="FillAndExpand">
                                                            <StackLayout Orientation="Horizontal">
                                                                <Label Text="{Binding CustomFieldName,StringFormat='{0} :'}"
                                                         FontAttributes="Bold"
                                                         TextColor="Black" FontSize="12"
                                                         HorizontalTextAlignment="Start"
                                                         VerticalTextAlignment="Center"
                                                         Padding="20,7,20,7">
                                                                </Label>
                                                                <Label Text="{Binding DefaultValue}" 
                                                         FontSize="12" 
                                                         TextColor="#8f1fff"
                                                         FontAttributes="Bold"
                                                         HorizontalTextAlignment="Start"
                                                         VerticalTextAlignment="Center"></Label>

                                                            </StackLayout>
                                                            <Border.Shadow>
                                                                <Shadow Brush="{OnPlatform Android=LightGray, iOS=LightGray}" Radius="{OnPlatform Android=5,iOS=3}"></Shadow>
                                                            </Border.Shadow>
                                                            <Border.StrokeShape>
                                                                <RoundRectangle CornerRadius="10" Stroke="LightGray" StrokeThickness="1"></RoundRectangle>
                                                            </Border.StrokeShape>
                                                        </Border>

                                                    </StackLayout>
                                                </ViewCell>
                                            </DataTemplate>
                                        </syncfusion:SfListView.ItemTemplate>
                                        <syncfusion:SfListView.Triggers>
                                            <DataTrigger TargetType="syncfusion:SfListView" Binding="{Binding CustomerDetails.LstCustomersCustomField.Count}" Value="0">
                                                <Setter Property="IsVisible" Value="False"></Setter>
                                                <Setter Property="HeightRequest" Value="0"></Setter>
                                            </DataTrigger>
                                        </syncfusion:SfListView.Triggers>
                                    </syncfusion:SfListView>

                                </StackLayout>

                                <StackLayout.Triggers>
                                    <DataTrigger TargetType="StackLayout" Binding="{Binding CustomerDetails.LstCustomersCustomField.Count}" Value="0">
                                        <Setter Property="IsVisible" Value="False"></Setter>
                                    </DataTrigger>
                                </StackLayout.Triggers>
                            </StackLayout>

                        </StackLayout>
                    </ScrollView>
                </tabView:SfTabItem.Content>
            </tabView:SfTabItem>
            <!--Schedules-->
            <tabView:SfTabItem Header="Schedules"  TextColor="Black" FontSize="14" 
                           FontFamily="Almarai-Regular" BackgroundColor="#f7f5fa">
                <tabView:SfTabItem.ImageSource>
                        <FontImageSource Glyph="" FontFamily="FontIconSolid" Color="Gray"></FontImageSource>
                </tabView:SfTabItem.ImageSource>
                <tabView:SfTabItem.Content>
                    <StackLayout>
                        <StackLayout Margin="0,20,0,20">
                            <ListView x:Name="lstSchedules" SelectionMode="None" 
                                      ItemsSource="{Binding LstSchedules}"
                                      HasUnevenRows="True" BackgroundColor="White"
                                      VerticalScrollBarVisibility="Never">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <ViewCell>
                                            <StackLayout Padding="20,10,20,10" Spacing="10">
                                                <StackLayout Orientation="Horizontal">
                                                    <Border BackgroundColor="#eedeff" HorizontalOptions="FillAndExpand">
                                                        <Label Text="{Binding Title}"
