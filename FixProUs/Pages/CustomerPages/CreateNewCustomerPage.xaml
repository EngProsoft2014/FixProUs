<?xml version="1.0" encoding="utf-8" ?>
<Controls:CustomsPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                     xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                     x:Class="FixProUs.Pages.CustomerPages.CreateNewCustomerPage"
                      xmlns:Controls="clr-namespace:FixProUs.Controls"
                      xmlns:Helpers="clr-namespace:FixProUs.Helpers"
                      xmlns:xct="http://schemas.microsoft.com/dotnet/2022/maui/toolkit" 
                      xmlns:vm="clr-namespace:FixProUs.ViewModels"
                      xmlns:syncfusion="clr-namespace:Syncfusion.Maui.ListView;assembly=Syncfusion.Maui.ListView"
                      BackgroundColor="White"
                      x:Name="page">


    <ContentPage.BindingContext>
        <vm:CustomersViewModel></vm:CustomersViewModel>
    </ContentPage.BindingContext>

    <StackLayout>
        <StackLayout>
            <!--New Cust-->
            <Controls:ToolBar Title="Create New Customer" HasBackButton="True" HorizontalOptions="FillAndExpand">
                <StackLayout.Triggers>
                    <DataTrigger TargetType="StackLayout" Binding="{Binding Source={x:Reference TitleUpdate},Path=IsVisible}" Value="True">
                        <Setter Property="IsVisible" Value="False"></Setter>
                    </DataTrigger>
                </StackLayout.Triggers>
            </Controls:ToolBar>

            <!--Update Cust-->
            <Controls:ToolBar x:Name="TitleUpdate" Title="Update Customer" IsVisible="False" HasBackButton="True" HorizontalOptions="FillAndExpand">
                <StackLayout.Triggers>
                    <DataTrigger TargetType="StackLayout" Binding="{Binding IsUpdateCust}" Value="2">
                        <Setter Property="IsVisible" Value="True"></Setter>
                    </DataTrigger>
                </StackLayout.Triggers>
            </Controls:ToolBar>
        </StackLayout>
        <ScrollView VerticalOptions="FillAndExpand">
            <StackLayout>
                <StackLayout>
                    <Label Text="Details" TextColor="#b66dff" FontAttributes="Bold" HorizontalOptions="StartAndExpand" Padding="20,0,20,5"></Label>

                    <Border BackgroundColor="White" HorizontalOptions="FillAndExpand" Margin="20,0,20,20" Padding="20,10,20,10">
                        <Grid RowSpacing="10" Padding="5,10,5,10" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"></RowDefinition>
                                <RowDefinition Height="auto"></RowDefinition>
                                <RowDefinition Height="auto"></RowDefinition>
                                <RowDefinition Height="auto"></RowDefinition>
                            </Grid.RowDefinitions>

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*"></ColumnDefinition>
                                <ColumnDefinition Width="5"></ColumnDefinition>
                                <ColumnDefinition Width="1*"></ColumnDefinition>
                            </Grid.ColumnDefinitions>

                            <StackLayout Grid.Column="0" HorizontalOptions="FillAndExpand">
                                <Label Text="First Name" TextColor="Black" FontSize="13" HorizontalOptions="StartAndExpand"></Label>
                                <Border BackgroundColor="White" Padding="{OnPlatform Android='5,0,5,0', iOS='5,3,5,3'}" HorizontalOptions="FillAndExpand">
                                    <Entry 
                                          Text="{Binding CustomerDetails.FirstName}" 
                                          Placeholder="First Name"
                                          TextColor="#8f1fff"
                                          FontSize="12"
                                          HorizontalOptions="FillAndExpand"
                                          VerticalTextAlignment="Center">
                                    </Entry>

                                    <Border.Shadow>
                                        <Shadow Brush="{OnPlatform Android=LightGray, iOS=LightGray}" Radius="{OnPlatform Android=5,iOS=3}"></Shadow>
                                    </Border.Shadow>
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="10" Stroke="LightGray" StrokeThickness="1"></RoundRectangle>
                                    </Border.StrokeShape>
                                </Border>
                            </StackLayout>

                            <StackLayout Grid.Column="3" HorizontalOptions="FillAndExpand">
                                <Label Text="Last Name" TextColor="Black" FontSize="13" HorizontalOptions="StartAndExpand"></Label>
                                <Border BackgroundColor="White" Padding="{OnPlatform Android='5,0,5,0', iOS='5,3,5,3'}" HorizontalOptions="FillAndExpand">
                                    <Entry 
                                          Text="{Binding CustomerDetails.LastName}" 
                                          Placeholder="Last Name"
                                          TextColor="#8f1fff"
                                          FontSize="12"
                                          HorizontalOptions="FillAndExpand"
                                          VerticalTextAlignment="Center">
                                    </Entry>
                                    <Border.Shadow>
                                        <Shadow Brush="{OnPlatform Android=LightGray, iOS=LightGray}" Radius="{OnPlatform Android=5,iOS=3}"></Shadow>
                                    </Border.Shadow>
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="10" Stroke="LightGray" StrokeThickness="1"></RoundRectangle>
                                    </Border.StrokeShape>
                                </Border>
                            </StackLayout>

                            <StackLayout Grid.Row="1" Grid.Column="0" HorizontalOptions="FillAndExpand">
                                <Label Text="Category" TextColor="Black" FontSize="13" HorizontalOptions="StartAndExpand"></Label>
                                <Border BackgroundColor="White" Padding="{OnPlatform Android='5,0,5,0', iOS='5,3,5,3'}" HorizontalOptions="FillAndExpand">
                                    <Picker ItemsSource="{Binding CustomerFeatures.LstCustomerCategory}" ItemDisplayBinding="{Binding CategoryName}" SelectedItem="{Binding OneCategoryModel,Mode=TwoWay}" SelectedIndexChanged="Picker_SelectedIndexChanged_1" 
                                            TextColor="#8f1fff" Title="Category"
                                            HorizontalOptions="FillAndExpand"
                                            FontSize="12"
                                            VerticalTextAlignment="Center">
                                        <Picker.Triggers>
                                            <DataTrigger TargetType="Picker" Binding="{Binding IsUpdateCust}" Value="2">
                                                <Setter Property="IsEnabled" Value="False"></Setter>
                                            </DataTrigger>
                                        </Picker.Triggers>
                                    </Picker>
                                    <Border.Shadow>
                                        <Shadow Brush="{OnPlatform Android=LightGray, iOS=LightGray}" Radius="{OnPlatform Android=5,iOS=3}"></Shadow>
                                    </Border.Shadow>
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="10" Stroke="LightGray" StrokeThickness="1"></RoundRectangle>
                                    </Border.StrokeShape>
                                </Border>
                            </StackLayout>

                            <StackLayout Grid.Row="1" Grid.Column="3" HorizontalOptions="FillAndExpand">
                                <Label Text="Source" TextColor="Black" FontSize="13" HorizontalOptions="StartAndExpand"></Label>
                                <Border BackgroundColor="White" Padding="{OnPlatform Android='5,0,5,0', iOS='5,3,5,3'}" HorizontalOptions="FillAndExpand">
                                    <Picker ItemsSource="{Binding LstCampaigns}" ItemDisplayBinding="{Binding Lable}" SelectedItem="{Binding OneCampaign,Mode=TwoWay}" SelectedIndexChanged="Picker_SelectedIndexChanged_3"
                                        TextColor="#8f1fff" Title="Source"
                                        FontSize="12"
                                        HorizontalOptions="FillAndExpand"
                                        VerticalTextAlignment="Center">
                                        <Picker.Triggers>
                                            <DataTrigger TargetType="Picker" Binding="{Binding IsUpdateCust}" Value="2">
                                                <Setter Property="IsEnabled" Value="False"></Setter>
                                            </DataTrigger>
                                        </Picker.Triggers>
                                    </Picker>
                                    <Border.Shadow>
                                        <Shadow Brush="{OnPlatform Android=LightGray, iOS=LightGray}" Radius="{OnPlatform Android=5,iOS=3}"></Shadow>
                                    </Border.Shadow>
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="10" Stroke="LightGray" StrokeThickness="1"></RoundRectangle>
                                    </Border.StrokeShape>
                                </Border>
                            </StackLayout>
                            <StackLayout Grid.Row="2" Grid.Column="0" HorizontalOptions="FillAndExpand" VerticalOptions="Center">
                                <Label Text="Member?" TextColor="Black" FontSize="13" HorizontalOptions="StartAndExpand"></Label>
                                <StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand" VerticalOptions="Center" Spacing="0">
                                    <RadioButton x:Name="rdBtnYes" 
                                                   Content="Yes$" 
                                                   TextColor="#333" 
                                                   GroupName="Group1"
                                                   IsChecked="False"
                                                   Scale="{OnPlatform Android=.8,iOS=.9}"
                                                   FontSize="{OnPlatform Android=16, iOS=13}" 
                                                   CheckedChanged="rdBtnYes_CheckedChanged">
                                        <RadioButton.Triggers>
                                            <DataTrigger TargetType="RadioButton" Binding="{Binding IsMemberShip}" Value="True">
                                                <Setter Property="IsChecked" Value="True"></Setter>
                                            </DataTrigger>
                                            <DataTrigger TargetType="RadioButton" Binding="{Binding IsUpdateCust}" Value="2">
                                                <Setter Property="IsEnabled" Value="False"></Setter>
                                            </DataTrigger>
                                        </RadioButton.Triggers>
                                    </RadioButton>
                                    <RadioButton x:Name="rdBtnNo" 
                                                   Content="No%" 
                                                   TextColor="#333" 
                                                   GroupName="Group1" 
                                                   IsChecked="True"
                                                   Scale="{OnPlatform Android=.8,iOS=.9}"
                                                   FontSize="{OnPlatform Android=16, iOS=13}" 
                                                   CheckedChanged="rdBtnNo_CheckedChanged">
                                        <RadioButton.Triggers>
                                            <DataTrigger TargetType="RadioButton" Binding="{Binding IsUpdateCust}" Value="2">
                                                <Setter Property="IsEnabled" Value="False"></Setter>
                                            </DataTrigger>
                                        </RadioButton.Triggers>
                                    </RadioButton>
                                </StackLayout>
                            </StackLayout>

                            <StackLayout x:Name="stkMember" IsVisible="False" Grid.Row="2" Grid.Column="3" HorizontalOptions="FillAndExpand">
                                <Label Text="Member Type" TextColor="Black" FontSize="13" HorizontalOptions="StartAndExpand"></Label>
                                <Border BackgroundColor="White" Padding="{OnPlatform Android='5,0,5,0', iOS='5,3,5,3'}" HorizontalOptions="FillAndExpand">
                                    <Picker ItemsSource="{Binding CustomerFeatures.LstMemberships}" ItemDisplayBinding="{Binding Name}" SelectedItem="{Binding OneMemberModel,Mode=TwoWay}" SelectedIndexChanged="Picker_SelectedIndexChanged"
                                            Title="Choose Membership"
                                            TextColor="#8f1fff"
                                            FontSize="12"
                                            HorizontalOptions="FillAndExpand"
                                            VerticalTextAlignment="Center">
                                        <Picker.Triggers>
                                            <DataTrigger TargetType="Picker" Binding="{Binding IsUpdateCust}" Value="2">
                                                <Setter Property="IsEnabled" Value="False"></Setter>
                                            </DataTrigger>
                                        </Picker.Triggers>
                                    </Picker>
                                    <Border.Shadow>
                                        <Shadow Brush="{OnPlatform Android=LightGray, iOS=LightGray}" Radius="{OnPlatform Android=5,iOS=3}"></Shadow>
                                    </Border.Shadow>
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="10" Stroke="LightGray" StrokeThickness="1"></RoundRectangle>
                                    </Border.StrokeShape>
                                </Border>

                                <Label Text="Member Expire Date" TextColor="Black" FontSize="13" HorizontalOptions="StartAndExpand"></Label>
                                <Border BackgroundColor="White" Padding="{OnPlatform Android='5,0,5,0', iOS='5,3,5,3'}" HorizontalOptions="FillAndExpand">
                                    <DatePicker 
                                             Date="{Binding CustomerDetails.MemeberExpireDate}"
                                             TextColor="#8f1fff"
                                             FontSize="12"
                                             HorizontalOptions="FillAndExpand">
                                        <DatePicker.Triggers>
                                            <DataTrigger TargetType="DatePicker" Binding="{Binding IsUpdateCust}" Value="2">
                                                <Setter Property="IsEnabled" Value="False"></Setter>
                                            </DataTrigger>
                                        </DatePicker.Triggers>
                                    </DatePicker>
                                    <Border.Shadow>
                                        <Shadow Brush="{OnPlatform Android=LightGray, iOS=LightGray}" Radius="{OnPlatform Android=5,iOS=3}"></Shadow>
                                    </Border.Shadow>
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="10" Stroke="LightGray" StrokeThickness="1"></RoundRectangle>
                                    </Border.StrokeShape>
                                </Border>
                            </StackLayout>

                            <StackLayout x:Name="stkDiscount" Grid.Row="2" Grid.Column="3" HorizontalOptions="FillAndExpand">
                                <Label Text="Discount %" TextColor="Black" FontSize="13" HorizontalOptions="StartAndExpand"></Label>
                                <Border BackgroundColor="White" Padding="{OnPlatform Android='5,0,5,0', iOS='5,3,5,3'}" HorizontalOptions="FillAndExpand">
                                    <Entry 
                                        Text="{Binding CustomerDetails.Discount}"
                                        Placeholder="Enter Discount"
                                        TextColor="#8f1fff"
                                        Keyboard="Numeric"
                                        FontSize="12"
                                        HorizontalOptions="FillAndExpand"
                                        VerticalTextAlignment="Center">
                                        <Entry.Triggers>
                                            <DataTrigger TargetType="Entry" Binding="{Binding IsUpdateCust}" Value="2">
                                                <Setter Property="IsEnabled" Value="False"></Setter>
                                            </DataTrigger>
                                        </Entry.Triggers>
                                    </Entry>
                                    <Border.Shadow>
                                        <Shadow Brush="{OnPlatform Android=LightGray, iOS=LightGray}" Radius="{OnPlatform Android=5,iOS=3}"></Shadow>
                                    </Border.Shadow>
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="10" Stroke="LightGray" StrokeThickness="1"></RoundRectangle>
                                    </Border.StrokeShape>
                                </Border>
                            </StackLayout>


                            <StackLayout Grid.Row="3" Grid.Column="0" HorizontalOptions="FillAndExpand" VerticalOptions="Center">
                                <StackLayout Orientation="Horizontal" Padding="5,10,5,10">
                                    <Label Text="Texable" TextColor="Black" FontSize="13" VerticalOptions="Center" HorizontalOptions="Start"></Label>
                                    <Switch x:Name="swtTaxable" IsToggled="{Binding CustomerDetails.Taxable}" VerticalOptions="Center" Toggled="swtTaxable_Toggled">
                                        <Switch.Triggers>
                                            <DataTrigger TargetType="Switch" Binding="{Binding CustomerDetails.Id}" Value="0">
                                                <Setter Property="IsToggled" Value="True"></Setter>
                                            </DataTrigger>
                                            <DataTrigger TargetType="Switch" Binding="{Binding IsUpdateCust}" Value="2">
                                                <Setter Property="IsEnabled" Value="False"></Setter>
                                            </DataTrigger>
                                        </Switch.Triggers>
                                    </Switch>
                                </StackLayout>
                            </StackLayout>

                            <StackLayout x:Name="stkTexable" IsVisible="False" Grid.Row="3" Grid.Column="3" HorizontalOptions="FillAndExpand">
                                <Label Text="Choose Tax" TextColor="Black" FontSize="13" HorizontalOptions="StartAndExpand"></Label>
                                <Border BackgroundColor="White" Padding="{OnPlatform Android='5,0,5,0', iOS='5,3,5,3'}" HorizontalOptions="FillAndExpand">
                                    <Picker ItemsSource="{Binding CustomerFeatures.LstTaxes}" ItemDisplayBinding="{Binding Taxname}" SelectedItem="{Binding OneTaxModel,Mode=TwoWay}" SelectedIndexChanged="Picker_SelectedIndexChanged_2"
                                            Title="Choose Tax"
                                            TextColor="#8f1fff"
                                            FontSize="12"
                                            HorizontalOptions="FillAndExpand"
                                            VerticalTextAlignment="Center">
                                        <Picker.Triggers>
                                            <DataTrigger TargetType="Picker" Binding="{Binding IsUpdateCust}" Value="2">
                                                <Setter Property="IsEnabled" Value="False"></Setter>
                                            </DataTrigger>
                                        </Picker.Triggers>
                                    </Picker>
                                    <Border.Shadow>
                                        <Shadow Brush="{OnPlatform Android=LightGray, iOS=LightGray}" Radius="{OnPlatform Android=5,iOS=3}"></Shadow>
                                    </Border.Shadow>
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="10" Stroke="LightGray" StrokeThickness="1"></RoundRectangle>
                                    </Border.StrokeShape>
                                </Border>
                            </StackLayout>
                        </Grid>

                        <Border.Shadow>
                            <Shadow Brush="{OnPlatform Android=LightGray, iOS=LightGray}" Radius="{OnPlatform Android=5,iOS=3}"></Shadow>
                        </Border.Shadow>
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="10" Stroke="LightGray" StrokeThickness="1"></RoundRectangle>
                        </Border.StrokeShape>
                    </Border>
                </StackLayout>

                <StackLayout>
                    <Label Text="Contact" HorizontalOptions="StartAndExpand" TextColor="#b66dff" FontAttributes="Bold" Padding="20,0,20,5"></Label>

                    <Border BackgroundColor="White" HorizontalOptions="FillAndExpand" Margin="20,0,20,20" Padding="20,10,20,10">
                        <Grid RowSpacing="10" Padding="5,10,5,10" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="1*"></RowDefinition>
                                <RowDefinition Height="1*"></RowDefinition>
                                <RowDefinition Height="auto"></RowDefinition>
                            </Grid.RowDefinitions>

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*"></ColumnDefinition>
                                <ColumnDefinition Width="1*"></ColumnDefinition>
                                <ColumnDefinition Width="1*"></ColumnDefinition>
                            </Grid.ColumnDefinitions>

                            <StackLayout HorizontalOptions="FillAndExpand" Grid.Column="0" Grid.ColumnSpan="4">
                                <Label Text="Phone" TextColor="Black" FontSize="13" HorizontalOptions="StartAndExpand"></Label>
                                <Border BackgroundColor="White" Padding="{OnPlatform Android='5,0,5,0', iOS='5,3,5,3'}" HorizontalOptions="FillAndExpand">
                                    <Entry 
                                          Text="{Binding CustomerDetails.Phone1}" 
                                          Placeholder="Phone"
                                          Keyboard="Telephone"
                                          TextColor="#8f1fff"
                                          FontSize="12"
                                          HorizontalOptions="FillAndExpand"
                                          VerticalTextAlignment="Center">
                                    </Entry>
                                    <Border.Shadow>
                                        <Shadow Brush="{OnPlatform Android=LightGray, iOS=LightGray}" Radius="{OnPlatform Android=5,iOS=3}"></Shadow>
                                    </Border.Shadow>
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="10" Stroke="LightGray" StrokeThickness="1"></RoundRectangle>
                                    </Border.StrokeShape>
                                </Border>
                            </StackLayout>

                            <StackLayout Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="4" HorizontalOptions="FillAndExpand">
                                <Label Text="Email" TextColor="Black" FontSize="13" HorizontalOptions="StartAndExpand"></Label>
                                <Border BackgroundColor="White" Padding="{OnPlatform Android='5,0,5,0', iOS='5,3,5,3'}" HorizontalOptions="FillAndExpand">
                                    <Entry 
                                        Text="{Binding CustomerDetails.Email}"
                                        Placeholder="Email"
                                        Keyboard="Email"
                                        TextColor="#8f1fff"
                                        FontSize="12"
                                        HorizontalOptions="FillAndExpand"
                                        VerticalTextAlignment="Center">
                                    </Entry>
                                    <Border.Shadow>
                                        <Shadow Brush="{OnPlatform Android=LightGray, iOS=LightGray}" Radius="{OnPlatform Android=5,iOS=3}"></Shadow>
                                    </Border.Shadow>
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="10" Stroke="LightGray" StrokeThickness="1"></RoundRectangle>
                                    </Border.StrokeShape>
                                </Border>
                            </StackLayout>


                            <StackLayout Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="4" HorizontalOptions="FillAndExpand">
                                <Label Text="Notes" TextColor="Black" FontSize="13" HorizontalOptions="StartAndExpand"></Label>
                                <Border BackgroundColor="White" Padding="{OnPlatform Android='5,0,5,0', iOS='5,3,5,3'}" HorizontalOptions="FillAndExpand">
                                    <Editor 
                                        Text="{Binding CustomerDetails.Notes}" 
                                        Placeholder="Notes"
                                        TextColor="#8f1fff"
                                        FontSize="12" BackgroundColor="White"
                                        HorizontalOptions="FillAndExpand"
                                        HeightRequest="80">
                                        <Editor.Triggers>
                                            <DataTrigger TargetType="Editor" Binding="{Binding IsUpdateCust}" Value="2">
                                                <Setter Property="IsEnabled" Value="False"></Setter>
                                            </DataTrigger>
                                        </Editor.Triggers>
                                    </Editor>
                                    <Border.Shadow>
                                        <Shadow Brush="{OnPlatform Android=LightGray, iOS=LightGray}" Radius="{OnPlatform Android=5,iOS=3}"></Shadow>
                                    </Border.Shadow>
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="10" Stroke="LightGray" StrokeThickness="1"></RoundRectangle>
                                    </Border.StrokeShape>
                                </Border>
                            </StackLayout>

                        </Grid>

                        <Border.Shadow>
                            <Shadow Brush="{OnPlatform Android=LightGray, iOS=LightGray}" Radius="{OnPlatform Android=5,iOS=3}"></Shadow>
                        </Border.Shadow>
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="10" Stroke="LightGray" StrokeThickness="1"></RoundRectangle>
                        </Border.StrokeShape>
                    </Border>
                </StackLayout>


                <StackLayout>
                    <Label Text="Location" HorizontalOptions="StartAndExpand" TextColor="#b66dff" FontAttributes="Bold" Padding="20,0,20,5"></Label>
                    <Border BackgroundColor="White" HorizontalOptions="FillAndExpand" Margin="20,0,20,20" Padding="20,10,20,10">
                        <Grid RowSpacing="10" Padding="5,10,5,10" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="1*"></RowDefinition>
                                <RowDefinition Height="1*"></RowDefinition>
                            </Grid.RowDefinitions>

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*"></ColumnDefinition>
                                <ColumnDefinition Width="1*"></ColumnDefinition>
                                <ColumnDefinition Width="1*"></ColumnDefinition>
                            </Grid.ColumnDefinitions>

                            <StackLayout Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="4" HorizontalOptions="FillAndExpand">
                                <Label Text="Address" TextColor="Black" FontSize="13" HorizontalOptions="StartAndExpand"></Label>
                                <Border BackgroundColor="White" Padding="{OnPlatform Android='5,0,5,0', iOS='5,3,5,3'}" HorizontalOptions="FillAndExpand">
                                    <Entry 
                                           Text="{Binding Address}"  
                                           TextColor="#8f1fff"
                                           Placeholder="Address"
                                           FontSize="12"
                                           HorizontalOptions="FillAndExpand"
                                           VerticalTextAlignment="Center"
                                           Focused="Entry_Focused">
                                    </Entry>
                                    <Border.Shadow>
                                        <Shadow Brush="{OnPlatform Android=LightGray, iOS=LightGray}" Radius="{OnPlatform Android=5,iOS=3}"></Shadow>
                                    </Border.Shadow>
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="10" Stroke="LightGray" StrokeThickness="1"></RoundRectangle>
                                    </Border.StrokeShape>
                                </Border>
                            </StackLayout>


                            <StackLayout Orientation="Horizontal" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="4" Spacing="5" HorizontalOptions="FillAndExpand">
                                <StackLayout HorizontalOptions="FillAndExpand">
                                    <Label Text="Year Built" TextColor="Black" FontSize="13" HorizontalOptions="StartAndExpand"></Label>
                                    <Border BackgroundColor="White" Padding="{OnPlatform Android=10, iOS=18}" HorizontalOptions="FillAndExpand">
                                        <Label TextColor="#333" 
                                             Text="{Binding YearBuilt}"      
                                             HorizontalOptions="FillAndExpand"
                                             FontSize="12"
                                             VerticalTextAlignment="Center">
                                            <Label.Triggers>
                                                <DataTrigger TargetType="Label" Binding="{Binding YearBuilt}" Value="0">
                                                    <Setter Property="Text" Value=""></Setter>
                                                </DataTrigger>
                                            </Label.Triggers>
                                        </Label>

                                        <Border.Shadow>
                                            <Shadow Brush="{OnPlatform Android=LightGray, iOS=LightGray}" Radius="{OnPlatform Android=5,iOS=3}"></Shadow>
                                        </Border.Shadow>
                                        <Border.StrokeShape>
                                            <RoundRectangle CornerRadius="10" Stroke="LightGray" StrokeThickness="1"></RoundRectangle>
                                        </Border.StrokeShape>
                                    </Border>
                                </StackLayout>

                                <StackLayout HorizontalOptions="FillAndExpand">
                                    <Label Text="Estimate Value" TextColor="Black" FontSize="13" HorizontalOptions="StartAndExpand"></Label>
                                    <Border BackgroundColor="White" Padding="{OnPlatform Android=10, iOS=18}" HorizontalOptions="FillAndExpand">
                                        <Label 
                                             Text="{Binding HouseValue}"            
                                             FontSize="12" TextColor="#333"
                                             HorizontalOptions="FillAndExpand"
                                             VerticalTextAlignment="Center">
                                            <Label.Triggers>
                                                <DataTrigger TargetType="Label" Binding="{Binding HouseValue}" Value="0">
                                                    <Setter Property="Text" Value=""></Setter>
                                                </DataTrigger>
                                            </Label.Triggers>
                                        </Label>
                                        <Border.Shadow>
                                            <Shadow Brush="{OnPlatform Android=LightGray, iOS=LightGray}" Radius="{OnPlatform Android=5,iOS=3}"></Shadow>
                                        </Border.Shadow>
                                        <Border.StrokeShape>
                                            <RoundRectangle CornerRadius="10" Stroke="LightGray" StrokeThickness="1"></RoundRectangle>
                                        </Border.StrokeShape>
                                    </Border>
                                </StackLayout>

                                <StackLayout HorizontalOptions="FillAndExpand">
                                    <Label Text="Square Footage" TextColor="Black" FontSize="13" HorizontalOptions="StartAndExpand"></Label>
                                    <Border BackgroundColor="White" Padding="{OnPlatform Android=10, iOS=18}" HorizontalOptions="FillAndExpand">
                                        <Label 
                                               Text="{Binding SquareFootage}"               
                                               FontSize="12" TextColor="#333"
                                               HorizontalOptions="FillAndExpand"
                                               VerticalTextAlignment="Center">
                                            <Label.Triggers>
                                                <DataTrigger TargetType="Label" Binding="{Binding SquareFootage}" Value="0">
                                                    <Setter Property="Text" Value=""></Setter>
                                                </DataTrigger>
                                            </Label.Triggers>
                                        </Label>
                                        <Border.Shadow>
                                            <Shadow Brush="{OnPlatform Android=LightGray, iOS=LightGray}" Radius="{OnPlatform Android=5,iOS=3}"></Shadow>
                                        </Border.Shadow>
                                        <Border.StrokeShape>
                                            <RoundRectangle CornerRadius="10" Stroke="LightGray" StrokeThickness="1"></RoundRectangle>
                                        </Border.StrokeShape>
                                    </Border>
                                </StackLayout>
                            </StackLayout>

                        </Grid>

                        <Border.Shadow>
                            <Shadow Brush="{OnPlatform Android=LightGray, iOS=LightGray}" Radius="{OnPlatform Android=5,iOS=3}"></Shadow>
                        </Border.Shadow>
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="10" Stroke="LightGray" StrokeThickness="1"></RoundRectangle>
                        </Border.StrokeShape>
                    </Border>



                </StackLayout>

                <StackLayout Margin="0,0,0,30">
                    <Label Text="Custom Fields" HorizontalOptions="StartAndExpand" TextColor="#b66dff" FontAttributes="Bold" Padding="20,0,20,5"></Label>

                    <!--New Customer-->
                    <StackLayout Orientation="Horizontal" Spacing="10" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" Margin="20,0,20,0">

                        <syncfusion:SfListView x:Name="lstCustomFields" 
                                               SelectionMode="None"
                                               AllowGroupExpandCollapse="True"
                                               ItemSize="75" BackgroundColor="White"
                                               Padding="0"
                                               Margin="0" HorizontalOptions="CenterAndExpand"
                                               ScrollBarVisibility="Default"
                                               ItemsSource="{Binding CustomerFeatures.LstCustomersCustomField}"    
                                               AutoFitMode="DynamicHeight">
                            <syncfusion:SfListView.ItemTemplate>
                                <DataTemplate>
                                    <ViewCell>
                                        <StackLayout Spacing="0">

                                            <Border BackgroundColor="White" Margin="0,0,0,15" HorizontalOptions="FillAndExpand">
                                                <StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand" Padding="0,10,0,10">
                                                    <Label Text="{Binding CustomFieldName,StringFormat='{0} :'}"          
                                                           FontAttributes="Bold"
                                                           TextColor="Black" FontSize="12"
                                                           HorizontalTextAlignment="Start"
                                                           VerticalTextAlignment="Center"
                                                           Padding="20,7,20,7">
                                                    </Label>

