<?xml version="1.0" encoding="utf-8" ?>
<Grid xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FixProUs.Controls.BadgeNotifications">


        <Grid.RowDefinitions>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height=".5*"></RowDefinition>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"></ColumnDefinition>
            <ColumnDefinition Width="1*"></ColumnDefinition>
            <ColumnDefinition Width="1*"></ColumnDefinition>
            <ColumnDefinition Width="1*"></ColumnDefinition>
            <ColumnDefinition Width="1*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Image Grid.Row="0" 
               Grid.RowSpan="5"
               Grid.Column="1"
               Grid.ColumnSpan="6">
            <Image.Source>
                <FontImageSource FontFamily="FontIcon" Glyph="ïƒ³" Color="Black" Size="18"></FontImageSource>
            </Image.Source>
        </Image>

        <Frame  CornerRadius="20" TranslationY="-10"
                BackgroundColor="#b66dff"
                HeightRequest="12"
                WidthRequest="12"
                HasShadow="False" 
                Margin="0" 
                Padding="0"
                Grid.Column="4"
                Grid.ColumnSpan="4"
                Grid.Row="0"
                Grid.RowSpan="4">
            <Label x:Name="lblBadge" 
               FontSize="11" 
               VerticalTextAlignment="Center"
               WidthRequest="10" 
               HeightRequest="16" 
               HorizontalTextAlignment="Center" 
               TextColor="White" 
               BackgroundColor="#b66dff">
            </Label>
            <Frame.Triggers>
                <DataTrigger TargetType="Frame" Binding="{Binding Source={x:Reference lblBadge},Path=Text}" Value="0">
                    <Setter Property="IsVisible" Value="False"></Setter>
                </DataTrigger>
            </Frame.Triggers>
        </Frame>

</Grid>